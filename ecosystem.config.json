{
  "apps": [{
    "name": "dolphin-bot",
    "script": "index.js",
    "args": "qr",
    "cwd": "./",
    "exec_mode": "fork",
    "instances": 1,
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "500M",
    "env": {
      "NODE_ENV": "production"
    },
    "error_file": "./logs/pm2-error.log",
    "out_file": "./logs/pm2-out.log",
    "log_file": "./logs/pm2-combined.log",
    "time": true,
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "max_restarts": 10,
    "min_uptime": "10s",
    "restart_delay": 4000,
    "kill_timeout": 5000,
    "listen_timeout": 10000,
    "wait_ready": false,
    "exp_backoff_restart_delay": 100
  }]
}
